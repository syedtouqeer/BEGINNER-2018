#include<stdio.h>
int add(int num);
int main()
{
    int num,i,sum=0;
    printf("Enter any integer\n");
    scanf("%d",&num);
    sum=add(num);
    printf("sum of natural numbers is %d",sum);
    return 0;
}
int add(int num)
{
	int i, sum =0;
	if (num == 0)
	{
		return num;
	}
	else
	{
		return (num * (num + 1) / 2);
	}
	
}
}
